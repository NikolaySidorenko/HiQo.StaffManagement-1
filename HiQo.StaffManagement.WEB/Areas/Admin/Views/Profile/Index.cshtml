@model IEnumerable<HiQo.StaffManagement.Core.ViewModels.UpdateUserViewModel>

@{
    ViewBag.Title = "Users";
}
<h2>Users</h2>
<div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
        </tr>
        </thead>
        @foreach (var obj in Model)
        {
        <tr>
            <td>
                <p>@obj.UserId</p>
            </td>
            <td>
                <p>@obj.FirstName</p>
            </td>
            <td>
                <p>@obj.LastName</p>
            </td>
            <td>
                @using (Html.BeginForm("Update", "Profile", new { id = obj.UserId }, FormMethod.Get))
                {
                    <button type="submit" class="btn btn-primary">Update</button>
                }
            </td>
            <td>
                @using (Html.BeginForm("Delete", "Profile", new { id = obj.UserId }, FormMethod.Get))
                {
                    <button type="submit" class="btn btn-primary">Delete</button>
                }
            </td>
        </tr>
        }
    </table>

    @using (Html.BeginForm("Create", "Profile", FormMethod.Get))
    {
        <button type="submit" class="btn btn-primary">Create</button>
    }

</div>