@model IEnumerable<HiQo.StaffManagement.Core.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Users";
}
<h2>Users</h2>
<div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">More info</th>
        </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <p>@user.UserId</p>
                </td>
                <td>
                    <p>@user.FirstName</p>
                </td>
                <td>
                    <p>@user.LastName</p>
                </td>
                <td>
                    @using (Html.BeginForm("Profiles", "User", new {id = user.UserId}, FormMethod.Get))
                    {
                        <button type="submit" class="btn btn-primary">Press</button>
                    }
                </td>
            </tr>
        }
    </table>

</div>